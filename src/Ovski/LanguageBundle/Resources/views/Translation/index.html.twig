{% extends '::base.html.twig' %}

{% block body %}
    <div class="translation">
        <div class="add-translation">
            <h3>Add a new translation</h3>
            {{ form(form) }}
        </div>
        <div class="filter-translations">
            <h3>Filter translations</h3>
            <form class="filter-form" method="get" action="{{ path('translation', {'slug': learning.slug}) }}">
                {{ form_rest(filterForm) }}
                <input type="submit" name="submit-filter" value="Filter" />
            </form>
        </div>
        <h3>Translation list</h3>
        {{ include('OvskiLanguageBundle::pagination.html.twig', {'routeName': 'translation', 'routeParams':{'pager': pager, 'slug': learning.slug}}) }}
        <table class="table records_list">
            <thead>
                <tr>
                    <th>{{ learning.language1 }}</th>
                    <th colspan=2>{{ learning.language2 }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in pager.currentPageResults %}
                <tr>
                    <td>
                        <span class="is-visible">{{ entity.word1 }}</span>
                        {% if entity.word1.article %}<span class="is-visible">({{ entity.word1.article }})</span>{% endif %}
                    </td>
                    <td>
                        <span class="is-visible">{{ entity.word2 }}</span>
                        {% if entity.word2.article %}<span class="is-visible">({{ entity.word2.article }})</span>{% endif %}
                    </td>
                    <td>
                       <a class="star {% if entity.isStarred %}star-yes{% endif %}"
                          href="{{ path('translation_star', {'slug': learning.slug, 'id': entity.id}) }}">
                       </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if pager.haveToPaginate %}
            {{ pagerfanta(pager, 'twitter_bootstrap3', {'routeName': 'translation', 'routeParams': {'slug': learning.slug}}) }}
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/bundles/ovskilanguage/js/translation.js"></script>
    <script type="text/javascript" src="/bundles/ovskilanguage/js/star.js"></script>
{% endblock %}